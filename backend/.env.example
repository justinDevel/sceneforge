# SceneForge Backend Configuration

# Application
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=your-super-secret-key-at-least-32-characters-long

# Database
DATABASE_URL=sqlite:///./sceneforge.db
# For PostgreSQL: postgresql://user:password@localhost/sceneforge

# Redis
REDIS_URL=redis://localhost:6379

# Bria AI Configuration
BRIA_API_KEY=your-bria-api-key
BRIA_BASE_URL=https://api.bria.ai/v2
BRIA_MODEL=fibo

# Google Gemini Configuration (for AI agents)
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-1.5-flash-latest

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB

# AWS S3 (optional, for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Generation Settings
MAX_FRAMES_PER_SCENE=20
DEFAULT_FRAME_COUNT=6
GENERATION_TIMEOUT=300